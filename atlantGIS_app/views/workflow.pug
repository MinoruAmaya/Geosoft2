extends layout

block content
    br
    br
    .container
        .row.justify-content-md-center
            .col-md-1
            .col-md-4
                div#form-div.active-form
                    form
                        label.col-md-4.col-form-label.fw-bolder(for='satellitenbild') Satellitenbild
                        input#satellitenbild.form-control.form-control-lg(type='file' name="satellitenbild" accept="image/tif" enctype="multipart/form-data")
                        button.btn.btn-primary.mb-2(type='submit') Weiter
                div#form-div
                    form
                        label.col-md-4.col-form-label.fw-bolder(for='training') Trainingsdaten
                        input#training.form-control.form-control-lg(type='file' name="training" accept=".gpkg, .geojson" enctype="multipart/form-data" disabled='')
                        button.btn.btn-secondary.mb-2(type='submit').disabled Weiter
                br
                div#form-div
                    form
                        input#testR.form-control(type='text' name="testR", disabled = '')
                        button.btn.btn-secondary.mb-2(type='submit').disabled AOA berechnen
            .col-md-6
                #map
            .col-md-1

block scripts 
  script(src="/javascripts/indexJS.js" defer)