extends layout

block content
  h1= message
  .container
      .row.justify-content-md-center
        .col-md-3
        .col-md-auto 
            form(action='/upload_satellitenbild' method='post')
                label.col-md-4.col-form-label.fw-bolder(for='satellitenbild') Satellitenbild
                input#satellitenbild.form-control.form-control-lg(type='text' value='Satellitendaten wurden gespeichert' aria-label='Satellitendaten wurden gespeichert' readonly='', disabled='')
                button.btn.btn-secondary.mb-2(type='submit').disabled Weiter 
            form#active-form(action='/upload_training' method='post')
              label.col-md-4.col-form-label.fw-bolder(for='training') Trainingsdaten
              input#training.form-control.form-control-lg(type='file' name="training" accept=".gpkg")
              button.btn.btn-primary.mb-2(type='submit') Weiter
            form(action='/calculate_AOA' method='post')
                input#testR.form-control(type='text' name="testR")
                button.btn.btn-primary.mb-2(type='submit') AOA berechnen
        .col-md-3


block scripts 
  script(src="/javascripts/indexJS.js" defer)